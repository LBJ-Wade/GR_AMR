Main
{
  simulation_type = "scalar"  
  dim = 3
  base_name = "scalar"
  print_precision = 9
  restart = FALSE
  restart_basename = "scalar"
  restart_step = 300
  restart_nodes = 1
  omp_num_threads = 12 //enable maximum threads if equals to 0
}

CartesianGridGeometry {
  domain_boxes = [(0,0,0), (63,63,63)]
  x_lo         = 0, 0, 0
  x_up         = 0.01, 0.01, 0.01
  periodic_dimension = 1, 1, 1
}


StandardTagAndInitialize {
  tagging_method = "GRADIENT_DETECTOR"
}


TreeLoadBalancer {
  DEV_report_load_balance = TRUE
  DEV_barrier_before = FALSE
  DEV_barrier_after = FALSE
}

BergerRigoutsos {
   combine_efficiency = 0.7
   efficiency_tolerance = 0.7
}

TimerManager{
    print_exclusive      = TRUE
    timer_list = "loop", "init", "RK_steps"
}


PatchHierarchy {
   max_levels = 2
   proper_nesting_buffer = 3, 3, 3, 3, 3, 3   
   largest_patch_size {
      level_0 = -1, -1, -1
      // all finer levels will use same values as level_0...
   }
   smallest_patch_size {
      level_0 = 8, 8, 8   
      // all finer levels will use same values as level_0...
   }
   ratio_to_coarser {
     level_1            = 2, 2, 2
     level_2            = 2, 2, 2
     level_3            = 2, 2, 2
     level_4            = 2, 2, 2
     level_5            = 2, 2, 2
     level_6            = 2, 2, 2
     level_7            = 2, 2, 2
     level_8            = 2, 2, 2  
   }
   allow_patches_smaller_than_ghostwidth = TRUE
   allow_patches_smaller_than_minimum_size_to_prevent_overlaps = TRUE
}

GriddingAlgorithm {
   enforce_proper_nesting = TRUE
   DEV_extend_to_domain_boundary = FALSE
   // DEV_load_balance = FALSE
   check_nonrefined_tags = "IGNORE"
   sequentialize_patch_indices = TRUE
}

CosmoSim{
  steps = 1000
  save_interval = 240
  do_plot = TRUE
  dt_frac = 0.1
  regridding_interval = 10
  adaption_threshold = 100
  KO_damping_coefficient = 0.0
  refine_op_type = "QUADRATIC_REFINE"
  coarsen_op_type = "CONSERVATIVE_COARSEN"
  use_AHFinder = TRUE
  AHFinder_interval = 5
  AHFinder_iter_limit = 20000
  AHFinder_dt_frac = 0.2
  surface_move_shreshold = 0
  use_anguler_momentum_finder = TRUE
  gradient_indicator = "DIFFK"
  regridding_step_lower_bound = 20
  regridding_step_upper_bound = 3000
  stop_after_found_horizon = FALSE
  comments = ""
}

ScalarSim{
  ic_type = "scalar_collapse"
  boundary_type = "periodic"
  stop_after_setting_init = FALSE
}

AHFD{
  find_every = 5
  N_horizons = 2
  origin_x = 0.005, 0.005
  origin_y = 0.005, 0.005
  origin_z = 0.005, 0.005
  sphere_x_center = 0.05, 0.05
  sphere_y_center = 0.005, 0.005
  sphere_z_center = 0.005, 0.005
  sphere_radius = 0.00008, 0.00002
  find_after_individual = 300, 300 // will only find horizon after this step (inclusive)
  max_Newton_iterations_initial = 20
}


Horizon{
  origin = 0.005, 0.005, 0.005
  radius = 0.0005
  is_periodic = TRUE
  doing_statistic = TRUE
  is_sphere = TRUE
  radius_limit = 0.00002
  non_zero_angular_momentum = FALSE
}

BSSN{
  lapse = "Harmonic"
  Shift = "GammaDriver"
  gd_eta = 2
  gd_c = 0.1
  normalize_Aij = TRUE
  normalize_gammaij = FALSE
  z4c_k1 = 0.1
  z4c_k2 = 0
  z4c_k3 = 0.5
  alpha_lower_bd_for_L2 = 0.3
  chi_lower_bd_type = "constant"
  chi_lower_bd = 1e-9
}

IO{
  output_list = "DIFFK", "F","DIFFchi"
  output_interval =  10, 10, 10
  
}

Scalar{
  potential_type = "Quadratic"
  q_coef = 1
  Lambda = 1
  delta_phi = 0.2
  n_max = 1
  phi_0 = 5
  relaxation_tolerance = 1e-8
  vcycles = 80
  DIFFalpha = 0
}